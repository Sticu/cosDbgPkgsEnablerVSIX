<platform:DialogWindow  x:Class="DbgPkgEnabler.ProgressDlg"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="True"
                        mc:Ignorable="d"
                        Width="1024"
                        Height="768">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Label for progress status -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="Progress:" Margin="0,0,0,10"/>
        <!-- Progress bar -->
        <ProgressBar x:Name="OperationRunningIndicator" Grid.Row="0" Height="20" Minimum="0" Maximum="100" Margin="62,0,0,20">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightTextColorKey}}"/>
            </ProgressBar.Foreground>
            <ProgressBar.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
            </ProgressBar.Background>
        </ProgressBar>
        <!-- Spacer row -->
        <Grid Grid.Row="2">
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="4" Padding="4" Margin="0,-15,0,0">
                <TextBox x:Name="CmdsExecOutput" TextWrapping="Wrap" Text="(debugify process output)" IsReadOnly="True" IsReadOnlyCaretVisible="True" FontFamily="Consolas" FontSize="11"/>
            </Border>
        </Grid>
        <!-- Close Button -->
        <Button x:Name="CloseX" Grid.Row="3" Content="CloseX" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CloseButton_Click" Width="83"/>
        <Button x:Name="DebugifyBtn" Grid.Row="3" Content="DEBUG-ify" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="84" Click="DebugifyButton_Click"/>
        <ProgressBar x:Name="ProgressOperationRunning" HorizontalAlignment="Center" Height="12" Grid.Row="3" VerticalAlignment="Center" Width="100"/>
        <CheckBox x:Name="ChkboxForceCheckAllPackages" Content="Force (re)check all packages" HorizontalAlignment="Left" Margin="107,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="180" Cursor="Hand" IsChecked="True"/>
    </Grid>
</platform:DialogWindow>
